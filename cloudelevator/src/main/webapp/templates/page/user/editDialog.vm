<form class="form-horizontal" id="baseInfoForm" action="$baseModule.setTarget('user/doSave')"
      method="post" role="form">

    $securityUtil.tokenHtml
    <input type="hidden" id="id" name="id" value="$!user.id"/>

    <div class="form-group">
        <label class="col-lg-2 control-label">用户名称</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" placeholder="username" name="username" value="$!user.username">
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label">密码</label>
        <div class="col-lg-10">
            <input type="password" class="form-control" placeholder="Password" name="password" value="$!user.password">
        </div>
    </div>
</form>
