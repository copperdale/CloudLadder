<form class="form-horizontal" id="baseInfoForm" action="$baseModule.setTarget('media/doSave')"
      method="post" enctype="multipart/form-data" role="form">

    $securityUtil.tokenHtml
    <input type="hidden" id="id" name="id" value="$!media.id"/>

    <div class="form-group">
        <label class="col-lg-2 control-label">视频名称</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" placeholder="title" name="title" value="$!media.title">
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label">上传视频</label>
        <div class="col-lg-10">
            <input type="file" id="fileUrl" name="fileUrl">
        </div>
    </div>
</form>
